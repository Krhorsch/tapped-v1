<%= render partial: "beers/menu", locals: {user: current_user} %>

<h3><%=@user.name%> has tapped these beers: </h3>

<% @user.user_beers.each do |userbeer| %>
<p><%= userbeer.beerinstance.display %> Rating: <%= userbeer.rating %> </p>
<% if @user == current_user %>
  <p><%= link_to "Adjust Beer Rating", "/userbeers/#{userbeer.id}/edit"%></p>
<% end %>
<% end %>

<% if @user == current_user %>
  <%= link_to "Tap a New Beer", "/users/#{@user.id}/beers/new"%>
<% end %>
