<h3><%=@user.name%> has tapped these beers: </h3>

<% @user.user_beers.each do |userbeer| %>
<p><%= userbeer.beer.display %> Rating: <%= userbeer.rating %> </p>
<% if @user == current_user %>
  <p><%= link_to "Adjust Beer Rating", edit_user_beer_path(userbeer)%>  |  <%= link_to "Remove from Tapped List", userbeer, method: :delete, data: { confirm: "Please confirm you would like to delete the selected beer from your tapped list." } %></p>
<% end %>
<% end %>

<% if @user == current_user %>
  <h4><%= link_to "Tap a New Beer", "/users/#{@user.id}/beers/new"%></h4>
<% end %>
