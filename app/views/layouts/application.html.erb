<!DOCTYPE html>
<html>
  <head>
    <title>TappedV1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
      <h4><%= link_to "Home", user_path(current_user)%> <%= link_to "Beers", beers_path %> <%= link_to "Users", users_path %> <%= link_to "Logout", "/logout"%></h4>
    <% else%>
      <%= link_to "Signup or Login", '/' %>
      <% end %>
    <%= yield %>
    <script type="text/javascript" charset="utf-8" src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  </body>
</html>
