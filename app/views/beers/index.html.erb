<% if logged_in? %>
  <%= render partial: "menu", locals: {user: current_user} %>
<% else%>
  <%= link_to "Signup or Login", '/' %>
  <% end %>

<h2>Check Out All Of The Beers Our Users Have Tried</h2>

<table>
    <tr>
      <th>Beer</th>
      <th>Overall User Rating</th>
    </tr>
<%@beers.organize.each do |beer| %>
    <tr>
      <td><%= beer.display %></td>
      <td><%= beer.overallrating.round(1) %></td>
    </tr>
<% end %>
</table>
 
